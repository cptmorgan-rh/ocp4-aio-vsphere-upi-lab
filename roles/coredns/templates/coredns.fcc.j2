variant: fcos
version: 1.3.0
passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - {{ config.installer_ssh_key }}
storage:
  files:
    - path: /opt/coredns/Corefile
      contents:
        local: Corefile
      mode: 0644
    - path: /opt/coredns/coredns.db
      contents:
        local: coredns.db
      mode: 0644
systemd:
  units:
    - name: coredns.service
      enabled: true
      contents: |
        [Unit]
        Description=coredns
        After=network-online.target
        Wants=network-online.target

        [Service]
        TimeoutStartSec=0
        ExecStartPre=-/bin/podman kill coredns
        ExecStartPre=-/bin/podman rm coredns
        ExecStartPre=/bin/podman pull quay.io/openshift/origin-coredns
        ExecStart=/bin/podman run --name coredns \
         --net=host \
         --privileged \
         -v /opt/coredns/:/root/:Z \
        quay.io/openshift/origin-coredns -conf /root/Corefile

        [Install]
        WantedBy=multi-user.target

    - name: vmtoolsd.service
      enabled: true
      contents: |
        [Install]
        WantedBy=multi-user.target

        [Unit]
        Description=Service for virtual machines hosted on VMware
        Documentation=http://github.com/vmware/open-vm-tools
        ConditionVirtualization=vmware
        Requires=vgauthd.service
        After=vgauthd.service
        DefaultDependencies=no
        Before=cloud-init-local.service

        [Service]
        ExecStart=/usr/bin/vmtoolsd
        TimeoutStopSec=5

        [Install]
        WantedBy=multi-user.target
        Also=vgauthd.service
